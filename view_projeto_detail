SELECT p.id AS projeto_id,
    p.ativa AS projeto_ativa,
    p.dataentrega AS projeto_entrega,
    p.dataresponsavel AS projeto_dataresponsavel,
    p.datastatus AS projeto_datastatus,
    p.descricao AS projeto_descricao,
    p.descricaocurta AS projeto_descricaocurta,
    p.numero AS projeto_numero,
    p.pac AS projeto_pac,
    p.statusatual AS projeto_statusatual,
    p.tipo AS projeto_tipo,
    p.cliente_id AS projeto_cliente_id,
    p.planta_id AS projeto_planta_id,
    p.responsavel AS projeto_responsavel,
    p.valorprojeto AS projeto_valorprojeto,
    p.numerocliente AS projeto_numerocliente,
    p.valorbudget AS projeto_valorbudget,
    p.valordespesas AS projeto_valordespesas,
    p.totalhoras AS projeto_totalhoras,
    p.totalhorasbudget AS projeto_totalhorasbudget,
    p.totalhorasbudget - p.totalhoras AS projeto_saldohoras,
    p.valorbudget + p.valordespesas AS projeto_saldo,
    u.codigo AS user_codigo,
    u.area AS user_area,
    u.ativo AS user_ativo,
    u.celular AS user_celular,
    u.email AS user_email,
    u.funcao AS user_funcao,
    u.login AS user_login,
    u.nome AS user_nome,
    u.idtipo AS user_idtipo,
    c.id AS cliente_id1,
    c.cidade AS cliente_cidade,
    c.estado AS cliente_estado,
    c.descricao AS cliente_descricao,
    c.nome AS cliente_nome,
    c.codigocigam AS cliente_codigo_cigam,
    pl.id AS planta_id,
    pl.cidade AS planta_cidade,
    pl.estado AS planta_estado,
    pl.descricao AS planta_descricao,
    pl.guerra AS planta_guerra,
    pl.nome AS planta_nome,
    pl.cliente_id AS planta_cliente_id,
    bd.tipoBudget AS budget_tipobudget,
    bd.tipomaterial AS budget_tipomaterial,
    bd.valor AS budget_valor,
    bd.descricaocurta AS budget_descricao,
    dp.cd_conta AS despesa_cd_conta,
    dp.conta_financeira AS despesa_conta_financeira,
    dp.conta_gerencial AS despesa_conta_gerencial,
    dp.gerenc_dados AS despesa_gerenc_dados,
    dp.historico AS despesa_historico,
    dp.percentual_rate AS despesa_percentual,			
    dp.previsto AS despesa_previsto,
    dp.realizado AS despesa_realizado,
    dp.realizado+dp.previsto AS despesa_valor		
   FROM projeto p
     JOIN user u ON p.responsavel = u.codigo
     JOIN cliente c ON p.cliente_id = c.id
     JOIN planta pl ON p.planta_id = pl.id
     JOIN budget bd ON bd.projeto_id = 	p.id
     JOIN despesa dp ON dp.projeto_id = p.id
  WHERE bd.tipobudget='financeiro' AND dp.tipo = 'financeiro'		
  ORDER BY u.nome, c.nome, pl.nome;