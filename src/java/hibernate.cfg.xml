<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <property name="current_session_context_class">thread</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <property name="connection.datasource">java:/comp/env/jdbc/SystemDB</property>
    <property name="current_session_context_class">thread</property>
    <mapping class="system.base.entities.user.User"/>
    <mapping class="system.base.entities.userType.UserType"/>
    <mapping class="system.base.entities.paramType.ParamType"/>
    <mapping class="system.base.entities.holiday.Holiday"/>
    <mapping class="system.base.entities.param.Param"/>
     <mapping class="system.base.entities.log.Log"/>
    <mapping class="system.base.entities.globalParameter.GlobalParameter"/> 
  </session-factory>
</hibernate-configuration>
