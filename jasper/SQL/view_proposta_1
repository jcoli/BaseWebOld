SELECT p.id AS proposta_id,
    p.ativa AS proposta_ativa,
    p.dataentrega AS proposta_entrega,
    p.dataportal AS proposta_portal,
    p.dataresponsavel AS proposta_dataresponsavel,
    p.datAStatus AS proposta_datAStatus,
    p.descricao AS proposta_descricao,
    p.descricaocurta AS proposta_descricaocurta,
    p.numero AS proposta_numero,
    p.pac AS proposta_pac,
    p.statusatual AS proposta_statusatual,
    p.tipo AS proposta_tipo,
    p.versao AS proposta_versao,
    p.cliente_id AS proposta_cliente_id,
    p.planta_id AS proposta_planta_id,
    p.responsavel AS proposta_responsavel,
    p.finalizacao AS proposta_finalizacao,
    p.motivoperda AS proposta_motivoperda,
    p.contatocomprAS_id AS proposta_contatocomprAS,
    p.contatoengenharia_id AS proposta_contatoengenharia,
    p.contatosolicitante_id AS proposta_contatosolicitante,
    p.valorproposta AS proposta_valorproposta,
    p.descricaodeclinada AS proposta_descricaodeclinada,
    p.numerocliente AS proposta_numerocliente,
    u.codigo AS user_codigo,
    u.area AS user_area,
    u.ativo AS user_ativo,
    u.celular AS user_celular,
    u.email AS user_email,
    u.funcao AS user_funcao,
    u.login AS user_login,
    u.nome AS user_nome,
    u.idtipo AS user_idtipo,
    c.id AS cliente_id1,
    c.cidade AS cliente_cidade,
    c.estado AS cliente_estado,
    c.descricao AS cliente_descricao,
    c.nome AS cliente_nome,
    c.codigocigam AS cliente_codigo_cigam,
    pl.id AS planta_id, 
    pl.cidade AS planta_cidade, 
    pl.estado AS planta_estado, 
    pl.descricao AS planta_descricao, 
    pl.guerra AS planta_guerra, 
    pl.nome AS planta_nome, 
    pl.cliente_id AS planta_cliente_id
   FROM proposta p
   JOIN user u ON p.responsavel = u.codigo
   JOIN cliente c ON p.cliente_id = c.id
   JOIN planta pl ON p.planta_id = pl.id	
  ORDER BY u.nome, c.nome, pl.nome;